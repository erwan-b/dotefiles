[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
enable-scroll = false

label-unfocused-foreground = #55ffffff
label-focused-foreground = #ffffffff
label-urgent-foreground = #ff0000

[module/time]
type = internal/date

interval = 1.0

date = %H:%M

[module/date]
type = internal/date
date = %Y-%m-%d
label = %date%

[module/volume]
type = internal/volume
format-volume = â™ª <label-volume>
format-muted = MUTE

[module/keyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

[module/music]
type = custom/script
exec = ~/.config/polybar/spotify.sh
interval = 2
tail = true

click-left = mocp -r
click-middle = mocp -G
click-right = mocp -f

scroll-up = mocp -k 10
scroll-down = mocp -k -10

[module/cpu]
type = internal/cpu
label = %percentage%%

[module/memory]
type = internal/memory
label =  %gb_used%

[module/ipadd]
type = custom/script
exec = hostname -I | cut -d ' ' -f 1

[module/ssid]
type = custom/script
exec = if [ "$(iwgetid)" = "" ]; then echo Ethernet; else echo $(iwgetid -r); fi
click-middle = notify-send $(hostname -I | cut -d ' ' -f 1)

[module/network]
type = internal/network
interface = wlp2s0
label-connected = %downspeed% | %upspeed%

[module/crypto]
type = custom/script
interval = 300
exec = ~/.config/polybar/crypto.py

[bar/float]

inherit = bar/white

background = #90ffffff

