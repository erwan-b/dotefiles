# Gaps

for_window [class="^.*"] border pixel 3
set $default_gaps_inner 10
set $default_gaps_outer 0
gaps inner 10
gaps outer 0

# floating
for_window [window_role="pop-up"] floating enable
for_window [class="imv"] floating enable
for_window [class="Thunar"] floating enable
for_window [class="File-roller"] floating enable
for_window [class="Wine"] floating enable
for_window [class="SFML"] floating enable
for_window [class="Raytracer"] floating enable

# Assigned workspaces
assign [class="clion"] workspace 2
assign [class="Clion"] workspace 2
assign [class="Chromium"] workspace 3
assign [class="brave"] workspace 3
assign [class="Firefox"] workspace 3
assign [class="Discord"] workspace 4
assign [class="Vlc"] workspace 9
assign [class="Lxrandr"] workspace 8
assign [class="Slack"] workspace 4
assign [class="Spotify"] workspace 9

# Font
#font pango: Terminus 11
font pango:Liberation Mono 10

#Mod Key
set $mod Mod1

# Borders
new_window normal

#i3lock
bindsym $mod+o exec --no-startup-id ~/git/gitgit/dotfiles/bin/i3lock.sh

# app laucher
bindsym $mod+d exec --no-startup-id rofi -show drun 

#term
bindsym $mod+Return exec termite

# chromium
bindsym $mod+G exec brave-browser 

# Toggle tilling/floating
bindsym $mod+Shift+space floating toggle

# Enter fullscreen
bindsym $mod+f fullscreen toggle

#change container layout (stacked, tabbed,  toggle spite)
bindsym $mod+s layout stacking
bindsym $mod+e layout tabbed
bindsym $mod+w layout toggle split

# Reload this config file
bindsym $mod+Shift+c reload

# Restart i3
bindsym $mod+Shift+r restart

#powermenu
bindsym $mod+shift+q exec ~/.config/i3/rofi_powermenu.sh

# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Kill window
bindsym $mod+q kill

# Back groud
exec_always --no-startup-id feh --bg-fill ~/Pictures/Wallpaper.jpg

#Multiscreen
exec_always --no-startup-id lxrandr

exec_always --no-startup-id compton --config ~/.config/compton.conf

#network manager
exec_always --no-startup-id nm-applet

exec_always --no-startup-id mate-settings-daemon
exec_always --no-startup-id mate-power-manager


# Network manager
exec_always --no-startup-id blueman-manager

# Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

exec_always setxkbmap -layout us -variant intl
exec_always setxkbmap -option caps:escape

# No mouse focus
focus_follows_mouse none

# move workspace
bindsym $mod+m move workspace to output right

# switch workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# moove to workspaces
bindsym $mod+shift+1 move container to workspace 1
bindsym $mod+shift+2 move container to workspace 2
bindsym $mod+shift+3 move container to workspace 3
bindsym $mod+shift+4 move container to workspace 4
bindsym $mod+shift+5 move container to workspace 5
bindsym $mod+shift+6 move container to workspace 6
bindsym $mod+shift+7 move container to workspace 7
bindsym $mod+shift+8 move container to workspace 8
bindsym $mod+shift+9 move container to workspace 9
bindsym $mod+shift+0 move container to workspace 10

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Brightness fn keys
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -inc -5%"
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc +5%"

# Sound fn keys
bindsym $mod+x exec --no-startup-id "amixer -q sset Master 3%+"
bindsym $mod+z exec --no-startup-id "amixer -q sset Master 3%-"

# Resize windows
mode "resize" {
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

